<div align = "center">
  <h1>Hello, welcome to Amy's Image Sharer!</h1>
  <%= link_to 'Go to upload new image', new_image_path %>
  <h2>List of existing images</h2>
  <div>
    <% @images.each do |image| %>
      <p>
        title:
        <%= image.title %>
      </p>
      <p>
        link:
        <%= image_tag(image.link, width: '300') %>
      </p>
      <ul>
        <% image.tag_list.each do |tag| %>
          <li><%= link_to tag, images_path(tag: tag) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
