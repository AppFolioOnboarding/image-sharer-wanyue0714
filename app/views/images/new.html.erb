<div align = "center">
  <h1> Upload your images here </h1>
  <% if @image.errors.any? %>
  <ul>
    <% @image.error.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
  <% end %>
  <%= form_for @image do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :link %>
      <%= f.text_area :link %>
    </p>
    <p>
      <%= f.label :tag %>
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  <%= link_to 'Back to Homepage', images_path %>
</div>
